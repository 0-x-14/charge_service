    <View
        android:id="@+id/box"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/round_rental_box"
        android:elevation="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/box_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="20dp"
        android:elevation="15dp"
        android:text="대여한 충전기 반납하기"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/box"
        app:layout_constraintTop_toTopOf="@id/box" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginHorizontal="50dp"
        android:columnCount="3"
        android:elevation="15dp"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="@id/box_text_2"
        app:layout_constraintEnd_toEndOf="@id/box"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="@id/box"
        app:layout_constraintTop_toTopOf="@id/box_text_1"
        app:layout_constraintVertical_bias="0.402">


        <TextView
            android:layout_width="44dp"
            android:layout_height="35dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="8핀"
            android:textAlignment="center"
            android:textSize="20sp" />

        <Button
            android:id="@+id/returnButton1"
            android:layout_width="111dp"
            android:layout_height="35dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginTop="24dp"
            android:backgroundTint="#1F68D6"
            android:elevation="15dp"
            android:fontFamily="@font/nanum_square_round_otf_b"
            android:gravity="bottom"
            android:text="반납하기"
            android:textAlignment="center"
            android:textSize="13sp"
            android:textStyle="bold"
            app:cornerRadius="20dp"
            tools:ignore="RtlCompat" />

        <TextView
            android:layout_width="44dp"
            android:layout_height="35dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="C타입"
            android:textAlignment="center"
            android:textSize="20sp" />

        <Button
            android:id="@+id/returnButton2"
            android:layout_width="111dp"
            android:layout_height="35dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginTop="24dp"
            android:backgroundTint="#1F68D6"
            android:elevation="15dp"
            android:fontFamily="@font/nanum_square_round_otf_b"
            android:gravity="bottom"
            android:text="반납하기"
            android:textAlignment="center"
            android:textSize="13sp"
            android:textStyle="bold"
            app:cornerRadius="20dp"
            tools:ignore="RtlCompat" />

        <TextView
            android:layout_width="44dp"
            android:layout_height="35dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="노트북"
            android:textAlignment="center"
            android:textSize="20sp" />


        <Button
            android:id="@+id/returnButton3"
            android:layout_width="111dp"
            android:layout_height="35dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginTop="24dp"
            android:backgroundTint="#1F68D6"
            android:elevation="15dp"
            android:fontFamily="@font/nanum_square_round_otf_b"
            android:gravity="bottom"
            android:text="반납하기"
            android:textAlignment="center"
            android:textSize="13sp"
            android:textStyle="bold"
            app:cornerRadius="20dp"
            tools:ignore="RtlCompat" />


    </GridLayout>

    <TextView
        android:id="@+id/box_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="44dp"
        android:elevation="15dp"
        android:text="*반납하기 버튼을 눌러 반납처리를 해주세요."
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/box"
        app:layout_constraintStart_toStartOf="@id/box" />


</androidx.constraintlayout.widget.ConstraintLayout>
